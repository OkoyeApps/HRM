@model resourceEdge.Domain.Entities.SystemAdminViewModel

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}

@using (Html.BeginForm("AddAdmin", "Admin", FormMethod.Post, new { data_parsley_validate = "" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-4">
        <div class="form-group">
            <label class="control-label">Group <b style="color:red;">*</b></label>
            @Html.DropDownListFor(model => model.GroupId, (SelectList)ViewBag.Groups, "Select Group", htmlAttributes: new { @class = "form-control", required = "", id="group" })

        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="control-label">Location <b style="color:red;">*</b></label>
            <select name="LocationId" id="location" class="form-control" required="">
                <option>Please select Group</option>
            </select>

        </div>
    </div>

        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Name <b style="color:red;">*</b></label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "" } })

            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Email <b style="color:red;">*</b></label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", data_parsley_type = "email", required = "" } })

            </div>
        </div>


        <div class="form-group">
            <div class="col-md-12" style="clear:both">
                <input type="submit" value="Create"  class="btn btn-success pull-right" />
            </div>
        </div>
}
@section Scripts{
    
<script src="~/Scripts/Pages/JS/Admin/Admin.js"></script>
    }