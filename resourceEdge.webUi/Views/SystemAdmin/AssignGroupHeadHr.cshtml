
@{
    ViewBag.Title = "AssignGroupHeadHr";
    Layout = "~/Views/Shared/HRLayout.cshtml";
}

<h2>AssignGroupHeadHr</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Select Group", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("groupId", (SelectList)ViewBag.Groups ,"Select Group",  htmlAttributes: new { @class = "form -control" } )
                @Html.ValidationMessage("groupId", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Select Hr", htmlAttributes: new { @class = "control-label col-md-2" })
            <select id="emp" name="userId"></select>
        </div>
        <div class="modal-footer">
            <button type="reset" data-dismiss="modal" class="btn btn-outline dark">Close</button>
            <input type="submit" class="btn btn-success" value="Create">
        </div>
    </div>
}
@section Scripts{
    
<script src="~/Scripts/Pages/JS/Admin/AssignHeadHr.js"></script>
    }