@model resourceEdge.Domain.Entities.DisciplinaryIncidentViewModel
@using resourceEdge.webUi.Models;
@{
    ViewBag.Title = "RaiseIncident";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
    var sessionDetail = (SessionModel)Session["_ResourceEdgeTeneceIdentity"];
}

@using (Html.BeginForm("RaiseIncident", "Discipline", null, FormMethod.Post, new { data_parsley_validate = "" }))
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-3">
            <div class="form-group">
                @Html.Label("Business Unit", htmlAttributes: new { @class = "control-label " })
                @Html.DropDownListFor(model => model.BusinessUnit, Model.Units,"Select Unit", htmlAttributes: new { @class = "form-control", required = "" })
                @Html.ValidationMessageFor(model => model.BusinessUnit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "control-label " })
                @*@Html.DropDownListFor(model => model.Department,null, htmlAttributes: new { @class = "form-control" })*@
                <select class="form-control" id="department" name="Department"  required = "">
                    <option>Please Select Business Unit</option>
                </select>
                @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.Label("Employee" , htmlAttributes: new { @class = "control-label " })
                @*@Html.EditorFor(model => model.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })*@
                <select class="form-control" id="employee" name="EmployeeName"  required = "">
                    <option>Please Select Department</option>
                </select>
                @Html.ValidationMessageFor(model => model.EmployeeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ReportingManager, htmlAttributes: new { @class = "control-label " })
                @* @Html.EditorFor(model => model.ReportingManager, new { htmlAttributes = new { @class = "form-control" } })*@
                <select class="form-control" id="rmanager" name="ReportingManager"  required = "">
                    <option>Please Select Business Unit</option>
                </select>
                @Html.ValidationMessageFor(model => model.ReportingManager, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.DateOfOccurence, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.DateOfOccurence, new { htmlAttributes = new { @class = "form-control", type = "date", required = "" } })
                @Html.ValidationMessageFor(model => model.DateOfOccurence, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ExpiryDate, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "form-control", type = "date", required = "" } })
                @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ViolationId, htmlAttributes: new { @class = "control-label " })
                @Html.DropDownListFor(model => model.ViolationId, Model.Violation, "Select Type", htmlAttributes: new { @class = "form-control", required = "" })
                @Html.ValidationMessageFor(model => model.ViolationId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ViolationDescription, htmlAttributes: new { @class = "control-label " })
                @* @Html.EditorFor(model => model.ViolationDescription, new { htmlAttributes = new { @class = "form-control", type="select" } })*@
                <textarea name="ViolationDescription" cols="2" class="form-control"  required = ""></textarea>
                @Html.ValidationMessageFor(model => model.ViolationDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Verdict, htmlAttributes: new { @class = "control-label " })
                @Html.EnumDropDownListFor(model => model.Verdict, "Select type", htmlAttributes: new { @class = "form-control", required = "" })
                @Html.ValidationMessageFor(model => model.Verdict, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.EmployeeAppeal, htmlAttributes: new { @class = "control-label " })
                @Html.EnumDropDownListFor(model => model.EmployeeAppeal, "Select type", htmlAttributes: new { @class = "form-control", required = "" })
                @Html.ValidationMessageFor(model => model.EmployeeAppeal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ConsequenceId, htmlAttributes: new { @class = "control-label " })
                @Html.DropDownListFor(model => model.ConsequenceId, Model.Consequences, "Select Corrective Measure", htmlAttributes: new { @class = "form-control", required = "" })
                @Html.ValidationMessageFor(model => model.ConsequenceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="clear:both">
            <div class="pull-right col-lg-offset-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
}
<div id="cusloc" class="hidden">@sessionDetail.LocationId</div>
<div id="grp" class="hidden">@sessionDetail.GroupId</div>
@section Scripts{
    
<script src="~/Scripts/Pages/JS/Discipline/discipline.js"></script>
    }


