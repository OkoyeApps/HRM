@model IEnumerable<resourceEdge.webUi.Infrastructure.Core.EmployeeListItem>

@{ 
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}
@section css{

    @Styles.Render("~/asset/tablecss");
}
<div class="table-responsive">
<table class="table table-striped table-responsive table-bordered"  id="tblGeneral">
    <thead>
        <tr>

            <th>
               Group
            </th>
            <th>
               Location
            </th>
            <th>
                Unit
            </th>
            <th>
                Department
            </th>
            <th>
               Email
            </th>
            <th>
               Fullname
            </th>
            <th></th>
        </tr>
    </thead>
 
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationName)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessUnitName)
                </td>
                <td>
                  @item.DepartmentName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empEmail)
                </td>
                <td>@item.FullName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>


</table>

</div>
@section Scripts{
    @Scripts.Render("~/assets/Table");
    <script src="~/Scripts/Pages/JS/DataTableInitialization.js"></script>
    }