@section css{
    <style>
        textarea {
            resize: none;
        }
    </style>
}

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}
<div id="overload">

</div>

@using (Html.BeginForm("addEmploymentStatus", "Configuration", FormMethod.Post, new { returnurl = ViewBag.returnUrl }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-horizontal" id="empForm">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-6">
            <label for="employemntStatus" class="control-label">Position Name</label>
            <input name="employemntStatus[0]" id="employemntStatus" class="form-control" required />
        </div>

        <div class="col-md-12">
            <hr />
        </div>
    </div>
    <div class="col-md-12" style="clear:both">

        <button type="submit" class="btn btn-success" style="clear: both"> Create</button>
        <button class="btn btn-primary blue pull-right" id="add" style="clear:both">Add New</button>
    </div>
}

@section Scripts{
<script src="~/Scripts/Pages/JS/Configuration/EmpStatus.js"></script>
}