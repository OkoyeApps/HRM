@model IEnumerable<resourceEdge.Domain.Entities.Group>

@{
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}
@section css{

  @Styles.Render("~/asset/tablecss");
}
<table class="table table-striped table-responsive table-bordered">
    <tr>
        <td>
            @Html.ActionLink("Add New Group", "AddGroup", "Configuration", null, new { @class = "btn btn-info pull-right" })
        </td>
    </tr>
    <tr>
        <td>
            <table class="table table-striped table-responsive table-bordered" id="tblGeneral">
                <thead>
                <tr>
                    <th>
                        Group Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.GroupName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descriptions)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditGroup", "Configuration", new { id = item.Id }, new { @class = "btn btn-warning pull-right" })
                        </td>
                    </tr>
                }
                </tbody>

            </table>
        </td>
    </tr>
</table>

@section Scripts{
    @Scripts.Render("~/assets/Table");
<script src="~/Scripts/Pages/JS/DataTableInitialization.js"></script>
    }