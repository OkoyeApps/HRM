@model resourceEdge.Domain.Entities.BusinessUnitsVIewModel
@section css{
    <style>
        textarea {
            resize: none;
        }
    </style>
}
@{

    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}

@using (Html.BeginForm("addBusinessUnits", "Configuration", FormMethod.Post, new { data_parsley_validate = "" }))
{
    @Html.AntiForgeryToken()
    <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Group", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.GroupId, (SelectList)ViewBag.Groups, "Select Group", htmlAttributes: new { @class = "bs-select form-control", required = "" })

            </div>
        </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Location", htmlAttributes: new { @class = "control-label" })
                    <select id="location" name="LocationId" class="bs-select form-control" required=""></select>

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Unit Name", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.unitname, new { htmlAttributes = new { @class = "form-control", required = "" } })

                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Unit Code", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.unitcode, new { htmlAttributes = new { @class = "form-control", required = "" } })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.startdate, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.startdate, new { htmlAttributes = new { @class = "form-control", required = "" } })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Descriptions", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.descriptions, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-10 col-md-6">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Pages/JS/Configuration/addunit.js"></script>
}
