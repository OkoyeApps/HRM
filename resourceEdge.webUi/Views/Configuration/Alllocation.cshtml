@model IEnumerable<resourceEdge.Domain.Entities.Location>

@{
    ViewBag.Title = "Alllocation";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}

<table class="table table-bordered table-responsive table-striped">
    <tr>
        <td>
            @Html.ActionLink("Add New Location", "AddLocation", "Configuration", null, new { @class = "btn btn-info pull-right" })
        </td>
    </tr>
    <tr>
        <td>
            <table class="table table-bordered table-responsive table-striped">
                <tr>
                    <th>
                      Group 
                    </th>
                    <th>
                      State
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address1)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Group.GroupName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address1)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Editlocation", "Configuration", new { id = item.Id }, new { @class = "btn btn-warning" })
                        </td>
                    </tr>
                }

            </table>
            </td>
</tr>
</table>