@using resourceEdge.webUi.Infrastructure.Core
@using System.Collections.Generic
@{
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
    var modelForview = (Tuple<IList<EmployeeListItem>, IList<EmployeeListItem>, IList<EmployeeListItem>>)ViewBag.Result;
    int i = 1;
}
@if (User.IsInRole("L2"))
{
    <div class="col-md-12">
        <ul class="nav nav-tabs nav-tabs-inverse nav-justified nav-justified-mobile" data-sortable-id="index-2" style="background-color:dodgerblue">
            <li class="active"><a href="#Pending" data-toggle="tab"><i class="fa fa-calender m-r-5"></i> <span class="hidden-xs">Pending</span></a></li>
            <li class=""><a href="#L2" data-toggle="tab"><span class="hidden-xs">Line Manager 3</span></a></li>
        </ul>
        <div class="tab-content" data-sortable-id="index-3">
            <div class="tab-pane fade active in" id="Pending" name="Pending">
                @if (modelForview.Item2.Count > 0)
                {
                    <div class="height-sm" data-scrollbar="true">
                        <table id="tblapproved" class="table table-striped table-bordered display table-responsive" width="100%">
                            <thead>
                                <tr>
                                    <th>S/N</th>
                                    <th>Fullname</th>
                                    <th><i class="icon-plane"></i> Business unit</th>
                                    <th><i class="icon-calendar font-dark"></i> Department</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="green portlet-body">
                                @{ }
                                @foreach (var item in modelForview.Item2)
                                {
                                    <tr>
                                        <td>@{int sn = i++;} @sn</td>
                                        <td>@item.FullName</td>
                                        <td>@item.BusinessUnitName</td>
                                        <td>@item.DepartmentName</td>
                                        <td><span class="label label-sm label-success">Pending</span></td>
                                        <td>
                                            <table>
                                                <tr>
                                                    <td class="centered">
                                                        @using (Html.BeginForm("SubmittedAppraisal", "Appraisal", new { userId = item.userId }, FormMethod.Post, null))
                                                        {
                                                            @Html.AntiForgeryToken()
                                                            <button class="btn btn-warning" type="submit"><i class="icon-eye"></i>View</button>
                                                        }
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                            }
                            </tbody>
                        </table>
                    </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-warning centered" style="text-align:center;font-size:large;"><b>No Pending appraisal for approval yet</b></div>
                                            }
            </div>
            <div class="tab-pane fade" id="L2" name="L2">
                @if (modelForview.Item3.Count > 0)
                {
                    <div class="height-sm" data-scrollbar="true">
                        <table class="table table-responsive table-striped table-bordered table-hover table-checkable" id="tbldenied">
                            <thead>
                                <tr>
                                    <th>S/N</th>
                                    <th>Fullname</th>
                                    <th><i class="icon-plane"></i> Business unit</th>
                                    <th><i class="icon-calendar font-dark"></i> Department</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody class="green portlet-body">
                                @{ int j = 1;}
                                @foreach (var item in modelForview.Item3)
                                {
                                    <tr>
                                        <td>@{int sn = i++;} @sn</td>
                                        <td>@item.FullName</td>
                                        <td>@item.BusinessUnitName</td>
                                        <td>@item.DepartmentName</td>
                                        <td><span class="label label-sm label-success">Pending</span></td>
                                    </tr>
                                            }
                            </tbody>
                        </table>
                    </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-warning centered" style="text-align:center;font-size:large;"><b>No Pending appraisal to approve. Kindly Check on Appraisee</b></div>
                                            }
            </div>
        </div>
    </div>
                                            }
