@using resourceEdge.Domain.ViewModels
@model resourceEdge.Domain.Entities.AppraisalConfigratuionViewModel

@{ 
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
    var usersessionObject = (resourceEdge.webUi.Models.SessionModel)Session["_ResourceEdgeTeneceIdentity"];
    var dropDowns = (SystemViewModel)ViewBag.dropDowns;
}

@section css{
    <link href="~/assets/AdminTemplate/assets/plugins/bootstrap-wizard/css/bwizard.min.css" rel="stylesheet" />
    }
<span id="group" hidden>@usersessionObject.GroupId</span>
@using (Html.BeginForm("ConfigureAppraisal", "Appraisal", FormMethod.Post, new { data_parsley_validate = "true", name = "form-wizard" }))
{
                                @Html.AntiForgeryToken()
                                <div id="wizard">
                                    <ol>
                                        <li>
                                            Initialization
                                            <small>Initialize appraisal for Business Unit or Department and enable to Managers or Employees</small>
                                        </li>
                                        <li>
                                            Configure Line Managers
                                            <small>Configure Line Managers by using The Group, Units or the Deparemental Heads</small>
                                        </li>
                                        @*<li>
                                            Configure Appraisal Parameters
                                            <small>Set the Appraisal parameters for an Employee, Department or a Business Unit </small>
                                        </li>*@
                                    </ol>
                                    <!-- begin wizard step-1 -->
                                    <div class="wizard-step-1">
                                        <fieldset>
                                            <legend class="pull-left width-full">CONFIGURE UNIT</legend>
                                            <!-- begin row -->
                                            <div class="row">
                                                <!-- begin col-4 -->
                                                <div class="col-md-4">
                                                    <div class="form-group block1">
                                                        <label>BusinessUnit</label>
                                                        @Html.DropDownList("BusinessUnit", dropDowns.BusinessUnits,"Select Unit", htmlAttributes: new { @class="form-control selectpicker", data_size="10", data_live_search="true", data_style="btn-white"})
                                                        @Html.ValidationMessage("BusinessUnit", "", new { @class = "text-danger" })                   
                                                    </div>
                                                </div>
                                                <!-- end col-4 -->
                                                <!-- begin col-4 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Department</label>
                                                       <select name="Department" id="departmentId" class="form-control selectpicker" data-size="10" data-live-search="true" data-style="btn-white" , data-parsley-group= "wizard-step-1" required = "required">
                                                        </select>
                                                        </div>
                                                </div>
                                                <!-- end col-4 -->
                                                <!-- begin col-4 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Appraisal Status</label>
                                                       @Html.DropDownList("AppraisalStatus", dropDowns.Status,"Select status", htmlAttributes: new { @class="form-control selectpicker", data_size="10", data_live_search="true", data_style="btn-white", data_parsley_group = "wizard-step-1", required = "", })
                                                    </div>
                                                </div>
                                                <!-- end col-4 -->

                                                <!-- begin col-4 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Enable To</label>
                                                        @Html.DropDownList("EnableTo",EnumHelper.GetSelectList(typeof(resourceEdge.Domain.Infrastructures.EnableTo)), "Select", htmlAttributes: new { @class = "form-control selectpicker", data_size = "10", data_live_search = "true", data_style = "btn-white", data_parsley_group= "wizard-step-1", required = "", name= "EnableTo" })
                                                    </div>
                                                </div>
                                                <!-- end col-4 -->
                                                <!-- begin col-4 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Eligibility</label>
                                                          @Html.DropDownList("Eligibility", dropDowns.EmploymentStatus, "All", htmlAttributes: new { @class = "form-control selectpicker", data_size = "10", data_live_search = "true", data_style = "btn-white", data_parsley_group = "wizard-step-1", required = "" })
                                                    </div>
                                                </div>
                                                <!-- end col-4 -->

                                                <!-- begin col-4 -->
                                                @*<div class="col-md-4">
                                                    <div class="form-group block1">
                                                        <label>Parameters</label>
                                                       @Html.DropDownList("Parameters", dropDowns.Parameter, "All", htmlAttributes: new { @class = "form-control selectpicker", data_size = "10", data_live_search = "true", data_style = "btn-white", data_parsley_group = "wizard-step-1", required = "required" })
                                                    </div>
                                                </div>*@
                                                <!-- end col-4 -->
                                            
                                                <!-- begin col-4 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Subscription Code</label>
                                                        <input type="text" name="Code" placeholder="Subscription Code" class="form-control" data-parsley-group="wizard-step-1" required />
                                                    </div>
                                                </div>
                                                <!-- end col-4 -->
                                            </div>
                                            <!-- end row -->
                                        </fieldset>
                                    </div>
                                    <br /><br />
                                    <!-- end wizard step-1 -->
                                    <!-- begin wizard step-2 -->
                                    <div class="wizard-step-2">
                                        <fieldset>
                                            <legend class="pull-left width-full">LINE MANAGERS</legend>
                                            <!-- begin row -->
                                            <div class="row">
                                                <!-- begin col-6 -->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>SELECT LINE MANAGER 1</label>
                                                       <select id="LineManager1" name="LineManager1" class="form-control" data-parsley-group="wizard-step-2" required>
                                                            <option>Select Linemanager 1</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!-- end col-6 -->

                                                <!-- begin col-6 -->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>LINE MANAGER 1</label>
                                                        <input id="sLine1" readonly name=""class="form-control" data-parsley-group="wizard-step-2" required />
                                                    </div>
                                                </div>
                                                <!-- end col-6 -->
                                                <!-- begin col-6 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>ASSIGN LINE MANAGER 2</label>
                                                        <select id="ALManager2" name=""  class="form-control" data-parsley-group="wizard-step-2" required>
                                                            <option value="">Select Line Manager 2</option>
                                                            <option value="A">By Unit Heads</option>
                                                            <option value="B">All Unit Heads</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!-- end col-6 -->
                                                <!-- begin col-6 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>SELECT LINE MANAGER 2</label>
                                                        <select id="LineManager2" name="LineManager2" class="form-control" data-parsley-group="wizard-step-2" required>
                                                            <option id="opt1" value="">Select Line Manager 2</option>
                                                        </select>
                                                     </div>
                                                </div>
                                                <!-- end col-6 -->

                                                <!-- begin col-6 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>LINE MANAGER 2</label>
                                                        <input readonly id="sLine2" placeholder="" class="form-control" data-parsley-group="wizard-step-2" required />
                                                    </div>
                                                </div>
                                                <!-- end col-6 -->

                                                <!-- begin col-6 -->
                                             


                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>ASSIGN LINE MANAGER 3</label>
                                                        <select id="ALManager3" class="form-control" data-parsley-group="wizard-step-2" required>
                                                            <option>Select Line Manager 3</option>
                                                            <option value="1">Department Heads Only</option>
                                                            <option value="2">All EMPLOYEE IN UNIT</option>
                                                            <option value="@usersessionObject.GroupId,G">All EMPLOYEE IN GROUP</option>

                                                        </select>
                                                    </div>
                                                </div>
                                                <!-- end col-6 -->

                                                <!-- begin col-6 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>SELECT LINE MANAGER 3</label>
                                                        <select id="LineManager3" name="LineManager3" class="form-control" data-parsley-group="wizard-step-2" required >
                                                            <option id="opt2">Select Line Manager 3</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!-- end col-6 -->

                                                <!-- begin col-6 -->
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>LINE MANAGER 3</label>
                                                        <input readonly id="sLine3" class="form-control" data-parsley-group="wizard-step-2" required />
                                                    </div>
                                                </div>
                                                <!-- end col-6 -->

                                            </div>
                                            <!-- end row -->
                                        </fieldset>
                                    </div>
                                    @*<br /><br />*@
                                    <input type="submit" class="btn btn-success col-lg-offset-11" value="Submit" />
                                    
                                </div>
                                }
                            @*</form>*@
                      
