@model IEnumerable<resourceEdge.webUi.Infrastructure.Core.EmployeeListItem>

@{
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}

@if (Model.Count() > 0)
{
<table class="table table-striped table-bordered display table-responsive">
    <tr>
        <th>
           Fullname
        </th>
     
        <th>
          Email
        </th>
        <th>
            Business Unit
        </th>
        <th>
            Department
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessUnitName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td >
            <table class="pull-right">
                <tr>
                    <td >
                        @using(Html.BeginForm("SubmittedAppraisal", "Appraisal", null, FormMethod.Post, null))
                        { 
                            @Html.AntiForgeryToken()
                        @Html.Hidden("key", item.userId);
                        <button class="btn btn-success pull-right" type="submit"> <i class="iconeye">View Appraisal</i></button>
                        }
                    </td>
                </tr>
            </table>
        </td>
    </tr>
}

</table>
}
else
{
    <div class="alert alert-warning">Sorry!</div>
}
