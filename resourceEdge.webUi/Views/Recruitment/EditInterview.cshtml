                @*<input name="InterviewDate" value="@Model.InterviewTime" class="form-control" type="date" />*@
                @Html.ValidationMessageFor(model => model.InterviewDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.InterviewTime, htmlAttributes: new { @class = "control-label " })
