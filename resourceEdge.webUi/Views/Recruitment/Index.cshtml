@using resourceEdge.webUi.Models
@using resourceEdge.Domain.Entities
@using resourceEdge.webUi.Models.SystemModel;
@{
    Layout = "~/Views/Shared/Layouts/_EmployeeLayout.cshtml";
    var usersessionObject = (SessionModel)Session["_ResourceEdgeTeneceIdentity"];
    var crumbs = (BreadCrumb)Session["_Crumbs"];
    var Menu = (List<Menu>)Session["_Menu"];
    ViewBag.Title = "Leave";
    var AllRequisition = (Tuple<IList<RequisitionListItems>, IList<RequisitionListItems>, IList<RequisitionListItems>>) ViewBag.AllRequisitons;
    var Approved = (List<resourceEdge.Domain.Entities.LeaveRequest>)ViewBag.Approved;
    var Denied = (List<resourceEdge.Domain.Entities.LeaveRequest>)ViewBag.Denied;
    var pending = (List<resourceEdge.Domain.Entities.LeaveRequest>)ViewBag.Pending;
    var All = (List<resourceEdge.Domain.Entities.LeaveRequest>)ViewBag.All;
}

@section css{
    <link href="~/assets/AdminTemplate/assets/plugins/jquery-jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" />
    <link href="~/assets/AdminTemplate/assets/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <link href="~/assets/AdminTemplate/assets/plugins/bootstrap-datepicker/css/datepicker3.css" rel="stylesheet" />
    <link href="~/assets/AdminTemplate/assets/plugins/gritter/css/jquery.gritter.css" rel="stylesheet" />

    <link href="~/assets/AdminTemplate/assets/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/css/buttons.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
}

<h1 class="page-header">
    Requisitions <small></small>
</h1><div class="row">
    <!-- begin col-3 -->
    <div class="col-md-4 col-sm-6">
        <div class="widget widget-stats bg-green">
            <div class="stats-icon"><i class="fa fa-calendar"></i></div>
            <div class="stats-info">
                <h4>Approved</h4>
                <p>@AllRequisition.Item1.Count</p>
            </div>
            <div class="stats-link">
                <a href="#approved" data-toggle="tab">View Detail <i class="fa fa-arrow-circle-o-right"></i></a>
            </div>
        </div>
    </div>
    <!-- end col-3 -->
    <!-- begin col-3 -->
    <div class="col-md-4 col-sm-6">
        <div class="widget widget-stats bg-red">
            <div class="stats-icon"><i class="fa fa-calendar"></i></div>
            <div class="stats-info">
                <h4>Denied</h4>
                <p>@AllRequisition.Item2.Count</p>
            </div>
            <div class="stats-link">
                <a href="#denied" data-toggle="tab">View Detail <i class="fa fa-arrow-circle-o-right"></i></a>
            </div>
        </div>
    </div>
    <!-- end col-3 -->
    <!-- begin col-3 -->
    <div class="col-md-4 col-sm-6">
        <div class="widget widget-stats bg-info">
            <div class="stats-icon"><i class="fa fa-bell-o"></i></div>
            <div class="stats-info">
                <h4>All</h4>
                <p>@AllRequisition.Item3.Count</p>
            </div>
            <div class="stats-link">
                <a href="#pending" data-toggle="tab">View Detail <i class="fa fa-arrow-circle-o-right"></i></a>
            </div>
        </div>
    </div>
    <!-- end col-3 -->
</div>

<!-- end row -->
<!-- begin row -->
<div class="row">
    <!-- begin col-8 -->
    <div class="col-md-12 ">
        <ul class="nav nav-tabs nav-tabs-inverse nav-justified nav-justified-mobile" data-sortable-id="index-2">
            <li class="active"><a href="#approved" data-toggle="tab"><i class="fa fa-calender m-r-5"></i> <span class="hidden-xs">Approved</span></a></li>
            <li class=""><a href="#denied" data-toggle="tab"><i class="fa fa-calendar m-r-5"></i> <span class="hidden-xs">Denied</span></a></li>
            <li class=""><a href="#pending" data-toggle="tab"><i class="fa fa-calendar m-r-5"></i> <span class="hidden-xs">Pending</span></a></li>
        </ul>
        <div class="tab-content" data-sortable-id="index-3">
            <div class="tab-pane fade active in" id="approved" name="approved">
                <div class="height-sm" data-scrollbar="true">
                    <div class="table-responsive">
                    <table id="tblapproved" class="table table-striped table-bordered display" width="100%">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>Req Code</th>
                                <th><i class="icon-plane"></i> Unit</th>
                                <th><i class="icon-calendar font-dark"></i> Dept</th>
                                <th><i class="icon-calendar font-dark"></i> Job</th>
                                <th>Position</th>
                                <th>Recruiter</th>
                            </tr>
                        </thead>
                        <tbody class="green portlet-body">
                            @{ int i = 1;}
                            @foreach (var item in AllRequisition.Item1)
                            {
                                <tr>
                                    <td>@{int sn = i++;} @sn</td>
                                    <td>@item.ReqCode</td>
                                    <td>@item.BusinessUnitName</td>
                                    <td>@item.DepartmentName</td>
                                    <td>@item.Job</td>
                                    <td>@item.Position</td>
                                    <td>@item.RaisedBy</td>
                                </tr>
                                        }
                        </tbody>
                    </table>
                        </div>
                </div>
            </div>
            <div class="tab-pane fade" id="denied" name="denied">
                <div class="height-sm " data-scrollbar="true">
                    <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover table-checkable" id="tbldenied">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>Req Code</th>
                                <th><i class="icon-plane"></i> Unit</th>
                                <th><i class="icon-calendar font-dark"></i> Dept</th>
                                <th><i class="icon-calendar font-dark"></i> Job</th>
                                <th>Position</th>
                                <th>Recruiter</th>
                            </tr>
                        </thead>
                        <tbody class="green portlet-body">
                            @{ int j = 0;}
                            @foreach (var item in AllRequisition.Item2)
                            {
                                <tr>
                                    <td>@{j++;} @j</td>
                                    <td>@item.ReqCode</td>
                                    <td>@item.BusinessUnitName</td>
                                    <td>@item.DepartmentName</td>
                                    <td>@item.Job</td>
                                    <td>@item.Position</td>
                                    <td>@item.RaisedBy</td>
                                </tr>
                                        }
                        </tbody>
                    </table>
                        </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pending" name="pending">
                <div class="height-sm" data-scrollbar="true">
                    <div class="table-responsive">
                    <table class="table  table-striped table-bordered table-hover table-checkable display" id="tblpending">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>Req Code</th>
                                <th><i class="icon-plane"></i> Unit</th>
                                <th><i class="icon-calendar font-dark"></i> Dept</th>
                                <th><i class="icon-calendar font-dark"></i> Job</th>
                                <th>Position</th>
                                <th>Recruiter</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody class="green portlet-body">
                            @{ int k = 0;}
                            @foreach (var item in AllRequisition.Item3)
                            {
                                <tr>
                                    <td>@{k++;} @k</td>
                                    <td>@item.ReqCode</td>
                                    <td>@item.BusinessUnitName</td>
                                    <td>@item.DepartmentName</td>
                                    <td>@item.Job</td>
                                    <td>@item.Position</td>
                                    <td>@item.RaisedBy</td>
                                    @if (item.Status == null)
                                    {
                                        <td><span class="label label-sm label-warning">Pending</span></td>
                                    }
                                    @if (item.Status == true)
                                    {
                                        <td><span class="label label-sm label-success">Approved</span></td>
                                    }
                                    @if (item.Status == false)
                                    {
                                        <td><span class="label label-sm label-danger">Denied</span></td>
                                    }
                                </tr>
                                        }
                        </tbody>
                    </table>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end col-8 -->
</div>

@section Scripts{
    <script src="~/assets/AdminTemplate/assets/plugins/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/AdminTemplate/assets/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
