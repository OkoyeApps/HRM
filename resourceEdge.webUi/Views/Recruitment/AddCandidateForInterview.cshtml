@model resourceEdge.Domain.Entities.CandidateInterviewViewModel

@{
    ViewBag.Title = "AddCandidateForInterview";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Interview", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("InterviewId",(SelectList)ViewBag.Interview, "Select Interview", htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.InterviewId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Candidate", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CandidateId",(SelectList)ViewBag.Candidate,"Select Candidates (multiple allowed)", htmlAttributes: new { @class = "form-control", multiple = "multiple"})
                @Html.ValidationMessageFor(model => model.CandidateId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success pull-right" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
