@model IEnumerable<resourceEdge.Domain.Entities.EmployeeLeave>

@{
    ViewBag.Title = "AllEmployeeLeave";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";

}
@section css{
    <link href="~/assets/AdminTemplate/assets/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />

    }

<table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
    <tr>
        <th>
          FullName
        </th>
        <th>
            Employee ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpLeaveLimit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsedLeaves)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllotedYear)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr class="gradeA">
        <td>
         @resourceEdge.webUi.Infrastructure.UserManagement.getEmployeeIdFromUserTable(item.UserId).UserfullName
        </td>
        <td>
            @resourceEdge.webUi.Infrastructure.UserManagement.getEmployeeIdFromUserTable(item.UserId).EmployeeId
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpLeaveLimit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsedLeaves)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllotedYear)
        </td>
    </tr>
}

</table>
@section Scripts{
    <script src="~/assets/AdminTemplate/assets/plugins/DataTables/media/js/jquery.dataTables.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
   
    <script src="~/assets/AdminTemplate/assets/js/table-manage-responsive.demo.min.js"></script> 

    }
@section InitScript{
    <script>
        $(document).ready(function () {
            TableManageResponsive.init();
        });
</script>
    }