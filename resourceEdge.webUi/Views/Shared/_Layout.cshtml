<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
     @*@Styles.Render("~/Content/css")*@
    <link href="~/Plugins/Css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Plugins/Css/bootstrap-modal-bs3patch.css" rel="stylesheet" />
    <link href="~/Plugins/Css/bootstrap-modal.css" rel="stylesheet" />
    @RenderSection("css", required : false)
    @*<link href="~/Plugins/Css/components.min.css" rel="stylesheet" />*@ 
     @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Codes", "AllCodes", "Configuration")</li>
                    <li>@Html.ActionLink("Business Units", "AllBusinessUnits", "Configuration")</li>
                    <li>@Html.ActionLink("Departments", "AllDepartment", "Configuration")</li>
                    <li>@Html.ActionLink("Jobs", "allJob", "Configuration")</li>
                    <li>@Html.ActionLink("Positions", "AllPosition", "Configuration")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*<script src="~/Plugins/Js/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/MainScript.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Plugins/Js/bootstrap-modalmanager.js"></script>
    <script src="~/Plugins/Js/bootstrap-modal.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
