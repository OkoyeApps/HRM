@section css{
    <style>
        textarea {
            resize: none;
        }
    </style>
}
@{
    Layout = ViewBag.Layout;
}
@model resourceEdge.Domain.Entities.IdentityCode

<hr />
<div id="codeContent">
    @using (Ajax.BeginForm("AddCode", "Configuration", new { returnurl = ViewBag.returnUrl }, new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "body" }, new { data_parsley_validate = "" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-4" style="padding-left:50px">
                <div class="form-group">
                    <label>Group</label>
                    <div class="controls">
                        @Html.DropDownListFor(model => model.GroupId, (SelectList)ViewBag.Groups, "Select Group", htmlAttributes: new { data_live_search = "true", data_size = "4", @class = "bs-select form-control", required = "" })
                        @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="padding-left:50px">
                <div class="form-group">
                    <label>Employee Code</label>
                    <div class="controls">
                        <input name="employee_code" id="employee_code" placeholder="Employee Code" class="form-control" required />
                        @Html.ValidationMessageFor(model => model.employee_code, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="padding-left:50px">
                <div class="form-group">
                    <label>Background Code</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.backgroundagency_code, new { htmlAttributes = new { @class = "form-control", required = "" } })
                        @Html.ValidationMessageFor(model => model.backgroundagency_code, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="padding-left:50px">
                <div class="form-group">
                    <label>Vendor Code</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.vendors_code, new { htmlAttributes = new { @class = "form-control", required = "" } })
                        @Html.ValidationMessageFor(model => model.vendors_code, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="padding-left:50px">
                <div class="form-group">
                    <label>Staff Code</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.staffing_code, new { htmlAttributes = new { @class = "form-control", required = "" } })
                        @Html.ValidationMessageFor(model => model.staffing_code, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="padding-left:50px">
                <div class="form-group">
                    <label>User Code</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.users_code, new { htmlAttributes = new { @class = "form-control", required = "" } })
                        @Html.ValidationMessageFor(model => model.users_code, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="padding-left:50px">
                <div class="form-group">
                    <label>Requisition Code</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.requisition_code, new { htmlAttributes = new { @class = "form-control", required = "" } })
                        @Html.ValidationMessageFor(model => model.requisition_code, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div style="clear:both"><span></span></div>
            <hr />

            <div class="pull-left" style="">
                <input type="submit" class="btn btn-success" value="Save">
            </div>

        </div>

    }
</div>
<div class="pull-right col-md-2">
    <a href="@Url.Action("AddLocation", "Configuration")" class="btn btn-danger ">Next</a>
</div>

