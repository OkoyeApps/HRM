@model IEnumerable<resourceEdge.webUi.Infrastructure.Core.EmployeeListItem>

@{
    ViewBag.Title = "AllQuestions";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}

@if (Model.Count() > 0)
{
    <table>
        <tr class="col-md-12">
            <td>
                @using (Html.BeginForm("ApproveQuestion", "HR", FormMethod.Post))
                {
                    Html.AntiForgeryToken();
                    <button type="submit" class="btn btn-success pull-right">Approve All</button><span>&nbsp;</span>
                }
            </td>
            <td>
                @using (Html.BeginForm("RejectQuestion", "HR", FormMethod.Post))
                {
                    Html.AntiForgeryToken();
                    <button type="submit" class="btn btn-danger pull-right">Reject All</button><span>&nbsp;</span>
                }
            </td>
        </tr>
    </table>
    <br />
    <table class="table table-responsive table-bordered">
        <thead>
            <tr>

                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Group")
                </th>
                <th>
                    @Html.DisplayName("Business Unit")
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Units.unitname)
                    </td>
                    <td>
                        @Html.ActionLink("View", "ViewQuestion", "HR", new { Id = item.userId }, null)
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <div class="alert alert-danger text-center">Sorry no Questions added yet</div>
}
