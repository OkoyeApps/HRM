@model IEnumerable<System.Linq.IGrouping<object,resourceEdge.Domain.Entities.Questions>>

@{
    ViewBag.Title = "AllQuestions";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}

@if (Model.Count() > 0)
{
<table class="table">
    <tr>

        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Question")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th>
            @Html.DisplayName("GroupId")
        </th>
        <th>
            @Html.DisplayName("BusinessUnit")
        </th>
        <th>
            @Html.DisplayName("Approved")
        </th>
        <th></th>
    </tr>

@foreach (var items in Model)
{
    foreach (var item in items)
    {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.UserFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group.GroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessUnit.unitname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Approved)
        </td>
        <td>
            @Html.ActionLink("Approve", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Reject", "Details", new { id = item.Id }) |
        </td>
    </tr>
    }
}
</table>
}
else
{
<div class="alert alert-danger text-center" >Sorry no Questions added yet</div>

}
