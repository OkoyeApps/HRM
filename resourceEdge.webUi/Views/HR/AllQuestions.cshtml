@model IEnumerable<resourceEdge.Domain.Entities.Question>

@{
    ViewBag.Title = "AllQuestions";
    Layout = "~/Views/Shared/Layouts/_HrLayout.cshtml";
}
@section css{
    <link href="~/assets/AdminTemplate/assets/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/css/buttons.bootstrap.min.css" rel="stylesheet" />
<link href="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
    }
<table class="table table-responsive table-striped table-bordered table-hover table-checkable">
    <tr>

    </tr>
    <tr>
        <td>
            @if (Model.Count() > 0)
            {
                <table class="table table-responsive table-striped table-bordered table-hover table-checkable" id="tblGeneral">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayName("Name")
                            </th>
                            <th>
                                @Html.DisplayName("Location")
                            </th>
                            <th>
                                @Html.DisplayName("Business Unit")
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tbody class="portlet-body">
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.UserFullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BusinessUnit.unitname)
                                </td>
                                <td>
                                    @Html.ActionLink("View", "ViewQuestion", "HR", new { Id = item.UserIdForQuestion }, new { @class = "btn btn-success" })
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            }
            else
            {
                <div class="alert alert-danger text-center">Sorry no Questions added yet</div>

            }
        </td>
    </tr>
</table>

@section Scripts{
    <script src="~/assets/AdminTemplate/assets/plugins/DataTables/media/js/jquery.dataTables.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/buttons.bootstrap.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/buttons.flash.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/jszip.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/pdfmake.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/vfs_fonts.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/buttons.html5.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Buttons/js/buttons.print.min.js"></script>
<script src="~/assets/AdminTemplate/assets/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
<script src="~/Scripts/Pages/JS/DataTableInitialization.js"></script>
}